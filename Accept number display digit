// Accept a number and display how many digits in the number

#include <iostream>
using namespace std;

int main()
{
    int num, digit = 0;

    cout << "\n\t Enter number: ";
    cin >> num;

    while(num > 0)
    {
        num = num / 10;
        digit ++;
    }

    cout << "\n\t The number of digits are: " << digit;
    
    return 0;
}
